<!-- _ParksGrid.cshtml (Partial View) -->
@model MVCWebApp.Models.ParkViewModel

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    <a href="#" class="sort-column" data-column="Id">
                        S.No
                        @if (Model.SortColumn == "Id")
                        {
                            <i class="fa fa-@(Model.SortOrder == "asc" ? "sort-asc" : "sort-desc")"></i>
                        }
                    </a>
                </th>
                <th>
                    <a href="#" class="sort-column" data-column="Name">
                        Park Name
                        @if (Model.SortColumn == "Name")
                        {
                            <i class="fa fa-@(Model.SortOrder == "asc" ? "sort-asc" : "sort-desc")"></i>
                        }
                    </a>
                </th>
                <th>
                    <a href="#" class="sort-column" data-column="Area">
                        Park Area (Acres)
                        @if (Model.SortColumn == "Area")
                        {
                            <i class="fa fa-@(Model.SortOrder == "asc" ? "sort-asc" : "sort-desc")"></i>
                        }
                    </a>
                </th>
                <th>
                    <a href="#" class="sort-column" data-column="Facilities">
                        Facilities Available
                        @if (Model.SortColumn == "Facilities")
                        {
                            <i class="fa fa-@(Model.SortOrder == "asc" ? "sort-asc" : "sort-desc")"></i>
                        }
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var park in Model.Parks)
            {
                <tr>
                    <td>@park.Id</td>
                    <td>@park.Name</td>
                    <td>@park.Area.ToString("N0")</td>
                    <td>@park.Facilities</td>
                </tr>
            }
            @if (!Model.Parks.Any())
            {
                <tr>
                    <td colspan="4" class="text-center">No parks found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="#" data-page="@(Model.CurrentPage - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="#" data-page="@i">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="#" data-page="@(Model.CurrentPage + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
}
